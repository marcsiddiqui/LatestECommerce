@model LatestECommerce.Models.CustomerRoleModel;

@{
    ViewData["Title"] = "Customer Role Create";
}

<div class="text-center">
    <a class="btn btn-secondary" asp-controller="CustomerRole" asp-action="Index" style="float: left">Back To List</a>
    <h1 class="display-4">Create Customer Role</h1>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>